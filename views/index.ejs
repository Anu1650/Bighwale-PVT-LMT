<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bigwhale Recruitment</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css">
  <link rel="stylesheet" href="/style.css">
  <style>
    .hero {
      height: 100vh;
      background: linear-gradient(rgba(0, 119, 204, 0.6), rgba(0, 119, 204, 0.6)),
                  url('/images/office-bg.jpg') center/cover no-repeat;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: white;
      animation: bgZoom 10s ease-in-out infinite alternate;
    }
    @keyframes bgZoom {
      from { background-size: 100%; }
      to { background-size: 110%; }
    }
    .btn-animated {
      background: linear-gradient(45deg, #0077cc, #00c6ff);
      color: white;
      padding: 12px 30px;
      font-size: 1.2rem;
      border: none;
      border-radius: 50px;
      transition: all 0.3s ease-in-out;
    }
    .btn-animated:hover {
      box-shadow: 0 0 20px rgba(0,198,255,0.8);
      transform: scale(1.05);
    }
  </style>
</head>
<body>

<!-- Hero Section -->
<section class="hero">
  <div data-aos="fade-up">
    <h1 class="fw-bold display-4 mb-3">Join Bigwhale Pvt Ltd</h1>
    <p class="lead mb-4">Be part of our journey towards innovation and excellence</p>
    <a href="/apply" class="btn-animated">Apply Now</a>
  </div>
</section>

<!-- Job Roles Section -->
<section class="py-5">
  <div class="container">
    <h2 class="text-center mb-5" data-aos="fade-down">Weâ€™re Hiring</h2>
    <div class="row g-4">
      <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
        <div class="card shadow h-100">
          <div class="card-body">
            <h5 class="card-title text-primary">Product Management</h5>
            <p class="card-text">Lead the development of our innovative products.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
        <div class="card shadow h-100">
          <div class="card-body">
            <h5 class="card-title text-primary">Website Handling</h5>
            <p class="card-text">Manage and optimize our online presence.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4" data-aos="zoom-in" data-aos-delay="300">
        <div class="card shadow h-100">
          <div class="card-body">
            <h5 class="card-title text-primary">Office Operations</h5>
            <p class="card-text">Ensure smooth day-to-day office activities.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
  AOS.init({ duration: 1000, once: true });
</script>
</body>
</html>
